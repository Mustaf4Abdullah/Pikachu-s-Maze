@model List<string>

@{
    ViewBag.Title = "Maze Game";
    Layout = null; // Add a layout file if you have one, e.g., "~/Views/Shared/_Layout.cshtml"
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(to right, #f7f8fc, #e6e9f0);
            font-family: Arial, sans-serif;
        }

        .maze-container {
            text-align: center;
            padding: 50px;
        }

        .maze-title {
            font-size: 2.5rem;
            color: #495057;
            margin-bottom: 20px;
        }

        .maze-subtitle {
            font-size: 1.25rem;
            color: #6c757d;
            margin-bottom: 30px;
        }

        .btn-custom {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #0056b3;
                color: #fff;
            }

        .solution-list {
            text-align: left;
            margin: 0 auto;
            max-width: 600px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .no-solution {
            color: #ff5252;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="maze-container">
        <h1 class="maze-title">Welcome to the Maze Game</h1>
        <p class="maze-subtitle">Help Pikachu find the exit!</p>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <button class="btn btn-custom" onclick="location.href='/Maze/Simulate'">Start Simulation</button>
            <a href="@Url.Action("Solve", "Maze")" class="btn btn-custom">Solve Maze</a>
        </div>

        @if (Model != null && Model.Any())
        {
            <h2 class="maze-title mt-5">Maze Solution</h2>
            <div class="solution-list">
                <ul class="list-group list-group-flush">
                    @foreach (var step in Model)
                    {
                        <li class="list-group-item">@step</li>
                    }
                </ul>
            </div>
        }
        else if (Model != null)
        {
            <p class="no-solution mt-4">No solution found or maze data invalid.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
